<form class="w-50 m-5" method="POST">
  <div class="mb-3">
    <label for="doctorID" class="form-label">Doctor ID</label>
    <input type="text" class="form-control" id="doctorID" name="doctorID" />
  </div>

  <div class="mb-3">
    <label for="patientID" class="form-label">Patient ID</label>
    <input type="text" class="form-control" id="patientID" name="patientID" />
  </div>

  <div class="mb-3">
    <label for="instructions" class="form-label">Instructions</label>
    <input
      type="text"
      class="form-control"
      id="instructions"
      name="instructions"
    />
  </div>

  <div class="dropdown-center mb-3">
    <button
      class="btn btn-danger dropdown-toggle"
      type="button"
      data-bs-toggle="dropdown"
      aria-expanded="false"
      data-bs-auto-close="false"
    >
      Medications
    </button>
    <ul class="dropdown-menu p-2">
      <% medications.forEach(medication => { %>
      <li>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="medicationIDs[]"
            value="<%=
            medication.MedicationID
            %>"
            id="<%= medication.MedicationID %>"
          />

          <label class="form-check-label" for="<%= medication.MedicationID %>">
            <%= medication.MedicationName %>
          </label>
        </div>
      </li>
      <% }) %>
    </ul>
  </div>

  <button type="submit" class="btn btn-success w-100">Prescribe</button>
</form>

<%- include('../error', {errorMessage}) %> <%- include('../success',
{successMessage}) %>
